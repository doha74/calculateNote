<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#58B680">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcule notes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#94B1EDDC"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:id="@+id/inputOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="note1"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/inputTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="note2"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/inputTree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="note3"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
    <EditText
        android:id="@+id/inputFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="note4"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:background="@drawable/button_calculate"
        android:backgroundTint="@null"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#94B1EDDC"
        android:layout_gravity="center_horizontal" />
</LinearLayout>